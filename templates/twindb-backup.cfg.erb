[source]
backup_dirs=/var/opt/chef-backup /etc/letsencrypt
backup_mysql=no

# Destination
[destination]
backup_destination=s3

[s3]
AWS_ACCESS_KEY_ID=<%= @aws_access_key_id %>
AWS_SECRET_ACCESS_KEY=<%= @aws_secret_access_key %>
AWS_DEFAULT_REGION=<%= @aws_default_region %>
BUCKET=<%= @bucket %>

[retention]
hourly_copies=6
daily_copies=7
weekly_copies=4
monthly_copies=12
yearly_copies=3

[retention_local]
hourly_copies=0
daily_copies=1
weekly_copies=0
monthly_copies=0
yearly_copies=0

[intervals]
run_hourly=yes
run_daily=yes
run_weekly=yes
run_monthly=yes
run_yearly=yes
